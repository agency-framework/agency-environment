<h2>Preview</h2>
<div class="preview">
    {{{preview}}}
</div>

<style type="text/css">
    {{{style}}}
</style>

<h2>Code</h2>
<section class="code">
    <h3>HTML</h3>
    <pre><code class="hljs">{{{code.html}}}</code></pre>
    <h3>Handlebars</h3>
    <pre><code class="hljs">{{{code.hbs}}}</code></pre>
    <h3>JSON</h3>
    <pre><code class="hljs">{{{code.json}}}</code></pre>
</section>

{{#if info.length}}
    <h2>Related Partials</h2>
    <nav aria-label="integrated partials">
        <ul>
            {{#each info}}
                <li><a href="{{url}}">{{title}}</a></li>
            {{/each}}
        </ul>
    </nav>
{{/if}}
